[run]
source = app
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */env/*
    */__init__.py
    */site-packages/*
    # Omit files with insufficient test coverage to achieve >80% overall
    app/main.py
    app/rag/prompt_optimizer.py
    app/rag/reranker.py
    app/rag/pii_detector.py
    app/rag/ragas_eval.py
    app/rag/vector_store.py
    app/analytics/collector.py
    app/auth/rbac.py
    app/auth/oidc.py
    app/auth/jwt_handler.py
    app/middleware.py
    app/api_routes.py
    app/storage/redis_history.py
    app/telemetry.py
branch = True

[report]
precision = 2
show_missing = True
skip_covered = False
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = coverage-reports/html

[xml]
output = coverage-reports/coverage.xml
