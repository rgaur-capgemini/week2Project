# Backend Environment Configuration
# GCP Project: btoproject-486405-486604

# GCP Project Configuration
PROJECT_ID=btoproject-486405-486604
REGION=us-central1
ZONE=us-central1-a
ENVIRONMENT=production

# Redis Configuration (Cloud Memorystore - chatbot-chat-history)
REDIS_HOST=10.168.174.3
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USE_AUTH=false
REDIS_TTL_DAYS=30

# Google Cloud Storage
GCS_BUCKET=btoproject-486405-486604-rag-documents

# Vertex AI Configuration
VERTEX_LOCATION=us-central1
MODEL_VARIANT=gemini-2.0-flash-001
EMBEDDING_MODEL=text-embedding-004

# Firestore
USE_FIRESTORE=true

# OAuth Configuration (from Secret Manager)
# These are loaded from Secret Manager at runtime
# Secret names:
# - google-oauth-client-id
# - google-oauth-client-secret
# - chatbot-jwt-secret
# Set these via: gcloud secrets versions access latest --secret=<secret-name>

# Service Account (Workload Identity)
# chatbot-rag-backend@btoproject-486405-486604.iam.gserviceaccount.com

# Admin Emails (comma-separated)
ADMIN_EMAILS=admin@example.com

# GKE Cluster Information
GKE_CLUSTER_NAME=chatbot-rag-gke
GKE_MASTER_IP=34.30.65.25

# Artifact Registry
ARTIFACT_REGISTRY=us-central1-docker.pkg.dev/btoproject-486405-486604/chatbot-rag-images

# Network Configuration
VPC_NETWORK=chatbot-rag-vpc
VPC_SUBNET=gke-subnet
VPC_CONNECTOR=chatbot-rag-connector

# Feature Flags
ENABLE_PII_DETECTION=true
ENABLE_RAGAS_EVAL=true
ENABLE_GRAPH_RAG=false

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=10
MAX_CONTEXT_TOKENS=4000

# Logging & Monitoring
LOG_LEVEL=INFO
ENABLE_CLOUD_LOGGING=true
ENABLE_CLOUD_TRACE=true
ENABLE_CLOUD_MONITORING=true
